{
  "name": "open_inwoner_frontend",
  "version": "0.0.0",
  "main": "./src/main.tsx",
  "scripts": {
    "dev": "node server",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "test:build": "npm run test:build:client && npm run test:build:server",
    "test:build:client": "vite build --mode test --outDir dist/client",
    "test:build:server": "vite build --mode test --ssr src/entry-server.tsx --outDir dist/server",
    "staging:build": "npm run staging:build:client && npm run staging:build:server",
    "staging:build:client": "vite build --mode staging --outDir dist/client",
    "staging:build:server": "vite build --mode staging --ssr src/entry-server.tsx --outDir dist/server",
    "generate": "vite build --outDir dist/static && npm run build:server && node prerender",
    "serve": "cross-env NODE_ENV=production node server",
    "debug": "node --inspect-brk server",
    "linter": "eslint ./src/ --ext .js,.jsx,.ts,.tsx",
    "test": "jest -env=jsdom --coverage"
  },
  "dependencies": {
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@mui/icons-material": "^5.0.0-rc.1",
    "@mui/material": "^5.0.6",
    "axios": "^0.23.0",
    "markdown-to-jsx": "^7.1.3",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-markdown": "^7.1.0",
    "react-router": "^5.2.1",
    "react-router-dom": "^5.3.0",
    "react-router-guards": "^1.0.2",
    "react-scrollspy": "^3.4.3"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.3",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/node": "^16.11.4",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.3.2",
    "@types/react-test-renderer": "^17.0.1",
    "@types/react-scrollspy": "^3.3.5",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "@vitejs/plugin-react": "^1.0.0",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "autoprefixer": "^10.3.7",
    "babel-jest": "^27.3.1",
    "babel-preset-react-app": "^10.0.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "express": "^4.17.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.3.1",
    "jest-circus": "^27.3.1",
    "jest-scss-transform": "^1.0.1",
    "jest-watch-typeahead": "^1.0.0",
    "react-test-renderer": "^17.0.2",
    "sass": "^1.42.1",
    "serve-static": "^1.14.1",
    "typescript": "^4.3.2",
    "vite": "^2.6.14"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest/mocks/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(js|jsx|mjs|cjs|ts|tsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.scss$": "jest-scss-transform",
      "^.+\\.css$": "<rootDir>/jest/mocks/cssMocks.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|cjs|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "resetMocks": true,
    "coveragePathIgnorePatterns" : [
      "<rootDir>/src/api/"
    ]
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "react-app"
        ]
      }
    }
  }
}
